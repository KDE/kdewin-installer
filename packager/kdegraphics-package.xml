<?xml version="1.0" encoding="UTF-8"?>
<module name="kdegraphics">
    <package name="libkdegraphics">
        <shortDescription>the kdegraphics support libraries</shortDescription>
		<part name="runtime">
			<files regexp="bin/.*(kdcraw|kexiv|kipi).*"/>
			<files regexp="lib/strigi.*"/>
			<files regexp="lib/kde4/.*(gsthumbnail|gvpart|msits|mobithumbnail|svgpart).*"/>
			<files regexp="share/.*(kdcraw|kexiv|kipi).*"/>
			<files regexp="share/.*(gsthumbnail|gvpart|msits|mobithumbnail|svgpart|KSane).*"/>
		</part>
		<part name="development">
			<files regexp="lib/.*(kdcraw|kexiv|kipi).*"/>
			<files regexp="include/.*(kdcraw|kexiv|kipi).*"/>
			<files regexp="lib/strigi.*"/>
		</part>
    </package>
    <package name="kcolorchooser">
        <shortDescription>a simple color choosing tool</shortDescription>
		<part name="runtime">
			<files regexp="bin/.*kcolorchooser.*"/>
			<files regexp="share/.*kcolorchooser.*"/>
		</part>
        <dependency>libkdegraphics</dependency>
    </package>
    <package name="kruler">
        <shortDescription>a simple screen ruler</shortDescription>
		<part name="runtime">
			<files regexp="bin/.*kruler.*"/>
			<files regexp="share/.*kruler.*"/>
		</part>
        <dependency>libkdegraphics</dependency>
    </package>
    <package name="kolourpaint">
        <shortDescription>a simple paint application</shortDescription>
		<part name="runtime">
			<files regexp="bin/.*kolourpaint.*"/>
			<files regexp="lib/.*kolourpaint.*"/>
			<files regexp="share/.*kolourpaint.*"/>
		</part>
        <dependency>libkdegraphics</dependency>
    </package>
    <package name="gwenview">
        <shortDescription>KDE's image viewer for jpg, png and more</shortDescription>
        <description>Gwenview is KDE's picture viewer</description>
		<part name="runtime">
			<files regexp="bin/.*gwenview.*"/>
			<files regexp="lib/.*gwenview.*"/>
			<files regexp="share/.*gwenview.*"/>
			<files regexp="share/.*slideshow.desktop"/>
		</part>
        <dependency>libkdegraphics</dependency>
    </package>
    <package name="Okular">
        <shortDescription>KDE's document viewer for PDF and more</shortDescription>
        <description>Okular is KDE's document viewer and supports besides PDF also PostScript(.ps,.eps), Oasis-Documents(.odt), DejaVu (.djvu), Compressed Windows Help (.chm), ebooks (.epub)</description>
		<part name="runtime">
			<files regexp="bin/.*okular.*"/>
			<files regexp="share/.*[Oo]kular.*"/>
			<files regexp="lib/kde4.*[Oo]kular.*"/>
		</part>
		<part name="development">
			<files regexp="include/okular.*"/>
			<files regexp="lib/.*okular.*"/>
		</part>
        <dependency>libkdegraphics</dependency>
    </package>
    <package name="default" empty="true">
        <shortDescription>the default package</shortDescription>
        <ignore>manifest/.*</ignore>
    </package>
</module>
